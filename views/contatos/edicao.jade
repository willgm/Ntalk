extends ../layout

block content
  h4 Edição de Contato:
  form(action='/contatos/'+contato.id, method='post', id='editar').form-inline
    input(type='hidden', name='_method', value='put')
    input(type='text', name='contato[nome]', placeholder='Nome', value=contato.nome).form-control
    br
    br
    input(type='text', name='contato[email]', placeholder='E-mail', value=contato.email).form-control
    br
    br

  form(action='/contatos/'+contato.id, method='post', id='deletar')
    input(type='hidden', name='_method', value='delete')

  input(type='submit', form='editar', value='Editar').btn.btn-primary
  &nbsp;&nbsp;&nbsp;&nbsp;
  input(type='submit', form='deletar', value='Deletar').btn.btn-danger
